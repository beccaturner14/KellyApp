<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main3Activity"
    tools:showIn="@layout/activity_main3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="62dp"
        android:text="I am so glad you are feeling happy. Lets talk about ways to make other people happy! "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="237dp"
        android:layout_height="77dp"
        android:text="1. Fill someone's bucket. Hold open the door. Leave a dollar on a vending machine. Random acts of kindness will never been forgotten.  "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:text="2. Compliment someone. Say something you usually think but don't say."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="148dp"
        android:layout_height="58dp"
        android:text='Example: "Good morning. Your hair looks really nice today."'
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:text="3. Greet people and ask how they are. People love to know they are being listened too."
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="249dp"
        android:layout_height="42dp"
        android:text="4. Write a letter to a friend. Tell them all the things you love about them."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="350dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</android.support.constraint.ConstraintLayout>